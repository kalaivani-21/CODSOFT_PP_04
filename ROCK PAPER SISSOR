import random
user_choice=int(input("Enter your choice: 0-Rock,1-Paper,2-Sissor "))
if user_choice >= 3 or user_choice < 0:
    print("You have entered a wrong choice and hence you lost!")
else:
    bot = random.randint(0,2)
    print("Bot:",bot)
    if bot == user_choice:
        print("It's a draw :)")
    elif bot == 0 and user_choice == 2:
        print("You lost!")
    elif user_choice == 0 and bot == 2:
        print("You won!")
    elif bot > user_choice:
        print("You lost!")
    elif user_choice > bot:
        print("You won!")
    elif bot == 0 and user_choice == 2:
        print("You lost!")
    elif user_choice == 0 and bot == 2:
        print("You won!")
